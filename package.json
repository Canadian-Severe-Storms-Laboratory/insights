{
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma"
  },
  "scripts": {
    "build": "turbo run build --no-daemon",
    "migrate": "prisma migrate dev --skip-generate",
    "generate": "turbo run build --filter=database --no-daemon",
    "start:backend": "turbo run start --filter=backend --no-daemon",
    "dev": "turbo run dev --continue --no-daemon",
    "dev:frontend": "turbo run dev --filter=frontend --continue --no-daemon",
    "dev:backend": "turbo run dev --filter=backend --continue --no-daemon",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch -- "
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "tsx": "^3.7.1",
    "turbo": "^1.10.3",
    "eslint": "^8.42.0"
  },
  "packageManager": "yarn@1.22.19"
}
